{% trans_default_domain 'FOSUserBundle' %}
<div class="container">
    <h2 class="section-title text-center">Registration</h2>
    <p class="lead main text-center">Reserve your table &amp; enjoy lorem Ipsum</p>
    <div class="col-lg-12 well">
        <div class="row">
            {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
                <div class="col-sm-12">
                    <div class="row">
                        <div class="col-sm-6 form-group">
                            <label>{{ 'form.firstname'|trans }}</label>
                            {{ form_widget(form.firstname, {'attr': {'class': 'form-control','placeholder':'Enter First Name Here..'}}) }}
                        </div>
                        <div class="col-sm-6 form-group">
                            <label>{{ 'form.lastname'|trans }}</label>
                            {{ form_widget(form.lastname, {'attr': {'class': 'form-control','placeholder':'Enter Last Name Here..'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label>{{ 'form.address'|trans }}</label>
                        {{ form_widget(form.address, {'attr': {'class': 'form-control','placeholder':'Enter Address Here..'}}) }}
                    </div>
                    <div class="row">
                        <div class="col-sm-6 form-group">
                            <label>{{ 'form.city'|trans }}</label>
                            {{ form_widget(form.city, {'attr': {'class': 'form-control','placeholder':'Enter City Name Here..'}}) }}
                        </div>
                        <div class="col-sm-6 form-group">
                            <label>{{ 'form.zipcode'|trans }}</label>
                            {{ form_widget(form.zipcode, {'attr': {'class': 'form-control','placeholder':'Enter Zip Code Here..'}}) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6 form-group">
                            <label>{{ 'form.digicode'|trans }}</label>
                            {{ form_widget(form.digicode, {'attr': {'class': 'form-control','placeholder':'Enter Digicode Here..'}}) }}
                        </div>
                        <div class="col-sm-6 form-group">
                            <label>{{ 'form.etage'|trans }}</label>
                            {{ form_widget(form.etage, {'attr': {'class': 'form-control','placeholder':'Enter Ã‰tage Here..'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label>{{ 'form.phonenumber'|trans }}</label>
                        {{ form_widget(form.phonenumber, {'attr': {'class': 'form-control','placeholder':'Enter Phone Number Here..'}}) }}
                    </div>
                    <div class="form-group">
                        <label>{{ 'form.email'|trans }}</label>
                        {{ form_widget(form.email, {'attr': {'class': 'form-control','placeholder':'Enter Email Address Here..'}}) }}
                    </div>
                    <div class="form-group">
                        <label>{{ 'form.username'|trans }}</label>
                        {{ form_widget(form.username, {'attr': {'class': 'form-control','placeholder':'Enter UserName Here..'}}) }}
                    </div>
                    <div class="row">
                        <div class="col-sm-6 form-group">
                            <label>{{ 'form.password'|trans }}</label>
                            {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control','placeholder':'Enter Your Password Here..'}}) }}
                        </div>
                        <div class="col-sm-6 form-group">
                            <label>{{ 'form.password_confirmation'|trans }}</label>
                            {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control','placeholder':'Confirme Your Password Here..'}}) }}
                        </div>
                    </div>
                    <input type="submit" value="{{ 'registration.submit'|trans }}" class="btn btn-lg btn-info" />
                </div>

            {{ form_end(form) }}


            </form>
        </div>
    </div>
</div>
